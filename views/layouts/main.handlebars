<script>

    const alrt = document.querySelector('.alert');
    const valid = document.querySelector('.valid')
    const notValid = document.querySelector('.notValid');
    const alreadyExists = document.querySelector('.alreadyExists');
    const clearButton = document.querySelector(".clear");

    clearButton.addEventListener("click", function () {
        if (confirm("Your data will be permanently deleted")) {
            logic.deleteRegistrations();
        }
    });


    if (alrt.innerText !== "") {
        setTimeout(function () {
            alrt.innerText = '';
        }, 3000);

    }

    if (valid.innerText !== "") {
        setTimeout(function () {
            valid.innerText = '';
        }, 3000);

    }

    if (alreadyExists.innerText !== "") {
        setTimeout(function () {
            alreadyExists.innerText = '';
        }, 3000);

    }

    if (notValid.innerText !== "") {
        setTimeout(function () {
            notValid.innerText = '';
        }, 3000);

    }

</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap/dist/js/bootstrap.min.js"></script>

