<body>
    <div class="centerDiv">
        <section class="container">
            <form action="/" method="POST">

                <h1>Registration Numbers</h1>

                <div class="input">
                    <label for="number">Registration Number:</label>
                    <input type="text" name="number" placeholder="Please enter registration" required><br>
                </div>

                <button type="submit" class="addingButton" value="Add">Registration Add</button>
            </form>
            <br>
            <form action="/filter" method="POST">
                <div>
                    <label for="city">Filter by City:</label>
                    <select name="city" id="filterCity">
                        <option value=""></option>
                        <option value="">All</option>
                        <option value="Cape Town">Cape Town</option>
                        <option value="Johannesburg">Johannesburg</option>
                        <option value="Durban">Durban</option>
                        <option value="Polokwane">Polokwane</option>
                    </select>
                </div>
                <button type="submit" class="DisplayBtn" value="Display">Registration filter</button>
            </form>
            <br>

            <div>
                <form action="/clear" method="POST">
                    <button type="submit">Clear Database</button>
                </form>
            </div>


        </section>
    </div>


    <div >
        <ul class="d-flex flex-wrap" >
            {{#each numberPlate}}

            <li class="plates">{{this.plate_number}}</li>

            {{/each}}
        </ul>

    </div>
    <!-- Display filtered registrations -->
    <h2>Filtered Registrations</h2>
    <ul>
        {{#each selectedCity}}
        <li class="plates">{{this.plate_number}} - {{this.city_id}}</li>
        {{/each}}
    </ul>

    <!-- Flash message for clearing the database -->
    {{#if flash.clr}}
    <div class="alert alert-success">
        {{flash.clr}}
    </div>
    {{/if}}
</body>

</html>